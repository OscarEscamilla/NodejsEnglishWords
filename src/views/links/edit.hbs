<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="s card-header">
                   <h3 class="text-success">Update Link</h3>
                </div>
                <div class="bg-grey card-body">
                    <form action="/links/update/{{link.id}}" method="post">
                        <div class="form-group">
                            <input type="text" value="{{link.title}}" name="title" placeholder="Title" class="form-control form-control-sm" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.url}}" name="url" placeholder="Url" class="form-control form-control-sm">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" cols="10" rows="5" class="form-control form-control-sm">{{link.description}}</textarea>
                        </div>
                        <div class="form-group">
                             <button type="submit" class="btn btn-success btn-sm btn-block">Save <i class="far fa-save"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

