<div class="container p-4">
    <div class="row">
        <div class="col-md-4  mx-auto">
            <div class="card">
                <div class="  bg-dark card-header">
                   <h3 class="text-white">Add Link</h3>
                </div>
                <div class="bg-grey card-body">
                    <form action="/links/add" method="post">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Title" class="form-control form-control-sm" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="url" placeholder="Url" class="form-control form-control-sm">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" cols="10" rows="5" class="form-control form-control-sm">

                            </textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success btn-sm btn-block">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

