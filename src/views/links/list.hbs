<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center mb-3">
                        <div class="card-body">
                            <a href="{{url}}" target="_blank">
                                <h3 class="card-title text-uppercase">
                                    {{title}}
                                </h3>
                            </a>
                            <p class="text-justify">
                               {{description}} 
                            </p>
                            <p>{{time_ago create_at}}</p>
                            <a href="/links/delete/{{id}}" class="btn btn-danger btn-sm">Delete <i class="fas fa-trash-alt"></i></a>
                            <a href="/links/update/{{id}}" class="btn btn-primary btn-sm">Update <i class="fas fa-edit"></i></a>
                        </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <p>No existen links guardados</p>
                    <a href="/links/add">Agregar uno</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>
