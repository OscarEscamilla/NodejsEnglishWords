<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center mb-3">
                        <div class="card-body">
                            <a href="{{url}}" target="_blank">
                                <h3 class="card-title text-uppercase">
                                    {{title}}
                                </h3>
                            </a>
                            <p class="">
                               {{description}} 
                            </p>
                            <p>{{time_ago create_at}}</p>
                            {{!--<a href="/links/delete/{{id}}" class="btn btn-danger btn-sm"></a>--}}
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#exampleModal">
                                Delete <i class="fas fa-trash-alt"></i>
                            </button>
                            <a href="/links/update/{{id}}" class="btn btn-primary btn-sm">Update <i class="fas fa-edit"></i></a>
                        </div>
                </div>
            </div>
            {{!--modal de confirmacion eliminar--}}
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Word</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Â¿Realmente desea eliminar este dato?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
                        <a href="/links/delete/{{id}}" class="btn btn-success btn-sm">Aceptar</a>
                    </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <p>No existen links guardados</p>
                    <a href="/links/add">Agregar uno</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>
